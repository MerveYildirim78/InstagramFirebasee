<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KayitActivity"
    android:background="@drawable/background">

    <Button
        android:id="@+id/GirisButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="33dp"
        android:onClick="girisClicked"
        android:text="Giriş Yap"
        app:layout_constraintBottom_toTopOf="@+id/KayitButton"
        app:layout_constraintEnd_toEndOf="@+id/KayitButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/KayitButton"
        app:layout_constraintTop_toBottomOf="@+id/sifreText"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/KayitButton"
        android:layout_width="148dp"
        android:layout_height="0dp"
        android:layout_marginBottom="148dp"
        android:layout_marginStart="61dp"
        android:onClick="kayitClicked"
        android:text="Kayıt Ol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GirisButton"
        android:background="@drawable/button"/>

    <EditText
        android:id="@+id/emailText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="95dp"
        android:ems="10"
        android:hint="   Email adresi"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/sifreText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:drawableLeft="@drawable/ic_action_name"/>

    <EditText
        android:id="@+id/sifreText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="19dp"
        android:ems="10"
        android:hint="Sifre"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/GirisButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailText"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:drawableLeft="@drawable/ic_action_sifre"/>
</androidx.constraintlayout.widget.ConstraintLayout>